doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h1.mb-4= title

      form(action='contact/process-update-contact' method='POST')
        .mb-3
          label.form-label(for='fullname') Full Name
          input.form-control(type='text', name='fullname', required=true)

        .mb-3
          label.form-label(for='email') Email
          input.form-control(type='email', name='email', required=true)

        .mb-3
          label.form-label(for='phone') Phone Number
          input.form-control(type='text', name='phone', required=true)

        .mb-3
          label.form-label(for='phone') Address 
          textarea.form-control(name='phone', rows='3')

        button.btn.btn-success(type='submit') Submit
        a.btn.btn-secondary.ms-2(href='/') Cancel