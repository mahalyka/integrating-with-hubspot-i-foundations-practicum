doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h1.mb-4= title

      .d-flex.mb-3
        a.btn.btn-error.me-2(href='/') &lt; Back
        a.btn.btn-primary(href='/contact/update-contact') + New Contact

      if records && records.length
        table.table.table-bordered.mt-4
          thead
            tr
              th ID
              th Full Name
              th email
              th Phone Number
              th Address
              th Created At
              th Process
          tbody
            each record in records
              tr
                td= record.id
                td= record.properties.fullname || '-'
                td= record.properties.email || '-'
                td= record.properties.phone || '-'
                td= record.properties.address || '-'
                td= new Date(record.properties.hs_createdate).toLocaleString()
                td
                  a.btn.btn-sm.btn-success(href=`/update-enquiry?contactId=${record.id}`) + Create Enquiry
      else
        p.mt-4.text-muted No enquiries found.