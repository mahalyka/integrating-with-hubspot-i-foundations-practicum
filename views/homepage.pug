doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h1.mb-4= title

      .d-flex.mb-3
        a.btn.btn-primary.me-2(href='/update-enquiry') + New Enquiry
        a.btn.btn-primary(href='/contact') + Open Contact List
      if records && records.length
        table.table.table-bordered.mt-4
          thead
            tr
              th ID
              th Name
              th Reserved By
              th Estimated Amount
              th Purpose
              th Created At
          tbody
            each record in records
              tr
                td= record.id
                td= record.properties.name || '-'
                td= record.properties.reserved_by || '-'
                td= record.properties.estimated_amount || '-'
                td= record.properties.enquiry_purpose || '-'
                td= new Date(record.properties.hs_createdate).toLocaleString()
      else
        p.mt-4.text-muted No enquiries found.